package aula6;

public class Pedido {
	int numero;
	Produto produto;
	int quantidade;
	double valor;
	
	Pedido(int numero, Produto produto, int quantidade){
		this.numero = numero;
		this.produto = produto;
		this.quantidade = quantidade;
		
	}
	
	public void calculaPedido() {
		this.valor = this.quantidade * this.produto.preco;
	}
}
