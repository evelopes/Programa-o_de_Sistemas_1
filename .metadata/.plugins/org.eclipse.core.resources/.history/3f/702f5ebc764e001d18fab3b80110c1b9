package aula6;

public class Pedido {
	int numero;
	Produto item;
	int quantidade;
	double valor;
	
	Pedido(int numero, Produto produto, int quantidade){
		this.numero = numero;
		this.item = produto;
		this.quantidade = quantidade;
		
	}
	
	
	double calculaPedido() {
		return valor = quantidade * item.preco;
	}
	
	public String toString() {
		String s =  "Número do pedido:" + this.numero + "\n Código do Produto:" + Produto.this.codigo; 
				return s;
	}
	
}
